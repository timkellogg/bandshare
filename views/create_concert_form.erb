<div id="form-wrapper" class="container">

	<div class="row">
		<div class="large-12 columns text-center">
			<h2>Book a New Concert</h2>
		</div>
	</div>

	<form action="/concerts" method="post" data-abide>

		<div class="row">
			<div class="large-6 text-center columns">
				<label for="band">Band Name:</label>
				<select required name="band" class="error">
					<option></option>
					<% @bands.each do |band| %>
						<option value="<%= band.id %>"><%= band.name %></option>
					<% end %>					
				</select>
				<small class="error">A band is required!</small>
			</div>

			<div class="large-6 text-center columns">
				<label for="venue">Venue Name:</label>
				<select name="venue" required class="error">
					<option></option>
					<% @venues.each do |venue| %>
						<option value="<%= venue.id %>"><%= venue.name %></option>
					<% end %>					
				</select>
				<small class="error">A venue is required!</small>
			</div>
		</div>

		<div class="row">
			<div class="large-6 text-center columns">
				<label for="attendance">Attendance (expected):</label>
      	<input type="text" name="attendance" required class="error">
      	<small class="error">We need to know how many people!</small>
			</div>

			<div class="large-6 text-center columns">
				<label for="date">Concert Date:</label>
      	<input id="datepicker" type="text" name="date" required class="error">
      	<small class="error">We need to know what when the concert is!</small>
			</div>
		</div>

		<div class="row">
			<div class="large-12 columns text-center">
				<button type="submit">Book Concert!</button>
			</div>
		</div>
	</form>
</div>






