<div id="band-show-wrapper">
	<div class="row">
		<div class="large-12 columns text-left">
			<h1 class="section-title"><%= @venue.name %></h1> 
			<h2 class="band-section-heading"><%= @venue.city %>, <%= @venue.country %></h2>
		</div>
	</div>

	<div class="row">
		<div class="large-12 columns">
			<img src="<%= @venue.pic_link %>">
		</div>
	</div>

	<div class="row">
		<div class="large-12 columns text-left">
			<h2 class="band-section-heading">Capacity: <%= @venue.capacity %></h2><br>
			<h3 class="band-section-heading">Recent Bands that have played here:</h3>
				<% if @venue.concerts.any? %>
					<ul>
						<% @venue.concerts.each do |concert| %>
							<li><%= Band.find(concert.band_id).name %> | <%= Band.find(concert.band_id).music_style %></li>
						<% end %>
					</ul>
				<% end %>
		</div>
	</div>

	<hr>
	<div class="row">
	  <div id="edit-panel" class="large-12 columns text-center">
	    <a class="button info" href="/venues/<%= @venue.id %>/edit">Edit</a>
	    <a class="button warning" href="/venues/<%= @venue.id %>/delete">Delete</a>
	    <a class="button" href="/venues">View all</a>
	  </div>
	</div>
</div>